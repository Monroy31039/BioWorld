library(testthat)

# Taxonomy_tbl_df
test_that("Taxonomy_tbl_df is a data.frame", {
  expect_s3_class(Taxonomy_tbl_df, "data.frame")
})

test_that("Taxonomy_tbl_df has 8 columns", {
  expect_equal(ncol(Taxonomy_tbl_df), 8)
})

test_that("Taxonomy_tbl_df has 960 rows", {
  expect_equal(nrow(Taxonomy_tbl_df), 960)
})

test_that("Taxonomy_tbl_df has correct column names", {
  expect_named(Taxonomy_tbl_df, c(
    "X", "Kingdom", "Phylum", "Class",
    "Order", "Family", "Genus", "Scientific.Name"
  ))
})

test_that("Taxonomy_tbl_df column types are correct", {
  expect_type(Taxonomy_tbl_df$X, "integer")
  expect_type(Taxonomy_tbl_df$Kingdom, "character")
  expect_type(Taxonomy_tbl_df$Phylum, "character")
  expect_type(Taxonomy_tbl_df$Class, "character")
  expect_type(Taxonomy_tbl_df$Order, "character")
  expect_type(Taxonomy_tbl_df$Family, "character")
  expect_type(Taxonomy_tbl_df$Genus, "character")
  expect_type(Taxonomy_tbl_df$Scientific.Name, "character")
})
