library(testthat)

# Test 1: Confirmar que el objeto es un array
test_that("Chimp_m es un array", {
  expect_true(is.array(Chimp_m))
})

# Test 2: Confirmar que el array es numérico
test_that("Chimp_m es numérico", {
  expect_type(Chimp_m, "double")
})

# Test 3: Confirmar que el array tiene exactamente 448 elementos
test_that("Chimp_m tiene 448 elementos", {
  expect_equal(length(Chimp_m), 448)
})

# Test 4: Confirmar que las dimensiones son 8 × 2 × 28
test_that("Chimp_m tiene dimensiones 8 × 2 × 28", {
  expect_equal(dim(Chimp_m), c(8, 2, 28))
})
